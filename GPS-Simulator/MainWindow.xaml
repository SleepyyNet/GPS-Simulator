<Window x:Class="GPS_Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        xmlns:local="clr-namespace:GPS_Simulator"
        mc:Ignorable="d"
        Title="GPS-Simulator" Height="720" Width="1280">
    <Grid>

        <m:Map x:Name="myMap"
            Center="47.6205, -122.3493" 
            CredentialsProvider="MRoghxvRwiH04GVvGpg4~uaP_it5CCQ6ckz-j9tA_iQ~AoPUZFQPIn9s1qjKPLgkvgeGPZPKznUlqM_e0fPu8NCXTi_ZSZTDud4_j0F1SkKU" 
            ZoomLevel="16" 
            MouseDoubleClick="Map_MouseDoubleClick"
            Mode="Road" RenderTransformOrigin="0.5,0.5" Margin="240,0,0,0">




        </m:Map>
        <GroupBox Header="Walking Route" HorizontalAlignment="Left" Height="115" Margin="10,453,0,0" VerticalAlignment="Top" Width="225"/>
        <Button x:Name ="walking" Content="Start" HorizontalAlignment="Left" Height="26" Margin="36,502,0,0" VerticalAlignment="Top" Width="182" Click="walk_Button_Click"/>
        <Button x:Name ="option" Content="Load GPX" HorizontalAlignment="Left" Height="26" Margin="36,471,0,0" VerticalAlignment="Top" Width="182" Click="option_Button_Click"/>
        <Button x:Name ="stop_button" Content="Stop" HorizontalAlignment="Left" Height="26" Margin="36,533,0,0" VerticalAlignment="Top" Width="182" Click="stop_Button_Click"/>


        <GroupBox Header="Teleport" HorizontalAlignment="Left" Height="109" Margin="10,204,0,0" VerticalAlignment="Top" Width="225" />
        <TextBox x:Name ="lat" HorizontalAlignment="Left" Height="28" Margin="80,218,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="138"/>
        <TextBox x:Name ="lon" HorizontalAlignment="Left" Height="28" Margin="80,251,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="138"/>
        <Label  Content="Lat" HorizontalAlignment="Left" Height="28" Margin="38,218,0,0" VerticalAlignment="Top" Width="65"/>
        <Label  Content="Lon" HorizontalAlignment="Left" Height="28" Margin="38,251,0,0" VerticalAlignment="Top" Width="65"/>
        <Button Content="Teleport" HorizontalAlignment="Left" Height="26" Margin="36,285,0,0" VerticalAlignment="Top" Width="182" Click="tele_Button_Click"/>
        <RadioButton x:Name ="walking_speed" Content="Walk - 8.8km/h" HorizontalAlignment="Left" Height="23" Margin="44,346,0,0" VerticalAlignment="Top" Click="walking_speed_click" Width="110"/>
        <RadioButton x:Name ="driving_speed" Content="Drive - 105km/h" HorizontalAlignment="Left" Height="22" Margin="44,397,0,0" VerticalAlignment="Top" Click="driving_speed_click" Width="110"/>
        <RadioButton x:Name ="running_speed" Content="Run - 26.4km/h" HorizontalAlignment="Left" Height="22" Margin="44,372,0,0" VerticalAlignment="Top" Click="running_speed_click" Width="110"/>

        <GroupBox Header="Speed" HorizontalAlignment="Left" Height="132" Margin="10,316,0,0" VerticalAlignment="Top" Width="225">
            <CheckBox x:Name="gps_drift" Content="GPS Drifting" HorizontalAlignment="Left" Height="19" Margin="28,88,0,0" VerticalAlignment="Top" Width="173"/>
        </GroupBox>
        <GroupBox Header="Device Informtion" HorizontalAlignment="Left" Height="123" Margin="10,568,0,-0.333" VerticalAlignment="Top" Width="225">
            <TextBlock x:Name ="connected_dev" Height="59" Margin="0,4,2.333,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        </GroupBox>
        <Button x:Name ="device_prov" Content="More" HorizontalAlignment="Left" Height="26" Margin="29,655,0,0" VerticalAlignment="Top" Width="182" Click="device_Button_Click"/>

        <GroupBox Header="Search" HorizontalAlignment="Left" Height="189" Margin="15,15,0,0" VerticalAlignment="Top" Width="220" />
        <Button Content="Search" HorizontalAlignment="Left" Height="25" Margin="159,29,0,0" VerticalAlignment="Top" Width="59" RenderTransformOrigin="1.206,0.45" Click="search_Button_Click"/>
        <TextBox x:Name ="search_box" HorizontalAlignment="Left" Height="25" Margin="36,29,0,0" VerticalAlignment="Top" Width="118"/>
        <ListBox x:Name ="search_result_list" Margin="36,59,1055.333,0" VerticalAlignment="Top" Visibility="{Binding HasItems,RelativeSource={RelativeSource Self}}" Height="140" SelectionChanged="search_result_list_SelectionChanged"  />

    </Grid>

</Window>
