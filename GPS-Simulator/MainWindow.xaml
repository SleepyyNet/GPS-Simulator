<Window x:Class="GPS_Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        xmlns:local="clr-namespace:GPS_Simulator"
        mc:Ignorable="d"
        Title="GPS-Simulator" Height="720" Width="1280">
    <Grid>
        <m:Map x:Name="myMap"
            Center="47.6205, -122.3493" 
            CredentialsProvider="MRoghxvRwiH04GVvGpg4~uaP_it5CCQ6ckz-j9tA_iQ~AoPUZFQPIn9s1qjKPLgkvgeGPZPKznUlqM_e0fPu8NCXTi_ZSZTDud4_j0F1SkKU" 
            ZoomLevel="16" 
            MouseDoubleClick="Map_MouseDoubleClick"
            Mode="Road" RenderTransformOrigin="0.5,0.5" Margin="240,0,0,0"/>

        <GroupBox Header="Walking Route" HorizontalAlignment="Left" Height="128" Margin="22,342,0,0" VerticalAlignment="Top" Width="144"/>
        <Button x:Name ="walking" Content="Start" HorizontalAlignment="Left" Height="26" Margin="36,394,0,0" VerticalAlignment="Top" Width="110" Click="walk_Button_Click"/>
        <Button x:Name ="option" Content="Load GPX" HorizontalAlignment="Left" Height="26" Margin="36,363,0,0" VerticalAlignment="Top" Width="110" Click="option_Button_Click"/>
        <Button x:Name ="stop_button" Content="Stop" HorizontalAlignment="Left" Height="26" Margin="36,425,0,0" VerticalAlignment="Top" Width="110" Click="stop_Button_Click"/>

        <GroupBox Header="Teleport" HorizontalAlignment="Left" Height="152" Margin="22,23,0,0" VerticalAlignment="Top" Width="144"/>
        <TextBox x:Name ="lat" HorizontalAlignment="Left" Height="28" Margin="75,48,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="71"/>
        <TextBox x:Name ="lon" HorizontalAlignment="Left" Height="28" Margin="75,81,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="71"/>
        <Label  Content="Lat" HorizontalAlignment="Left" Height="28" Margin="36,48,0,0" VerticalAlignment="Top" Width="60"/>
        <Label  Content="Lon" HorizontalAlignment="Left" Height="28" Margin="36,81,0,0" VerticalAlignment="Top" Width="60"/>
        <Button Content="Teleport" HorizontalAlignment="Left" Height="26" Margin="36,124,0,0" VerticalAlignment="Top" Width="110" Click="tele_Button_Click"/>
        <RadioButton x:Name ="walking_speed" Content="Walk - 8.8km/h" HorizontalAlignment="Left" Height="26" Margin="44,215,0,0" VerticalAlignment="Top" Click="walking_speed_click" Width="110"/>
        <RadioButton x:Name ="driving_speed" Content="Drive - 105km/h" HorizontalAlignment="Left" Height="26" Margin="44,273,0,0" VerticalAlignment="Top" Click="driving_speed_click" Width="110"/>
        <RadioButton x:Name ="running_speed" Content="Run - 26.4km/h" HorizontalAlignment="Left" Height="26" Margin="44,244,0,0" VerticalAlignment="Top" Click="running_speed_click" Width="110"/>

        <GroupBox Header="Speed" HorizontalAlignment="Left" Height="137" Margin="22,180,0,0" VerticalAlignment="Top" Width="144"/>
        <GroupBox Header="Device Informtion" HorizontalAlignment="Left" Height="123" Margin="22,499,0,0" VerticalAlignment="Top" Width="144">
            <TextBlock x:Name ="connected_dev" Height="60" Margin="0,4,2,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        </GroupBox>
        <Button x:Name ="device_prov" Content="More" HorizontalAlignment="Left" Height="26" Margin="36,596,0,0" VerticalAlignment="Top" Width="110" Click="device_Button_Click"/>
    </Grid>

</Window>
